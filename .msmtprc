#Файл конфигурации для утилиты msmtp
#Для управления через планировщик положить в директорию /etc/ и выполнить команды:
#chown root:msmtp /etc/msmtprc
#chmod 640 /etc/msmtprc

account default
logfile /var/log/msmtp.log
host smtp.mail.ru
port 587
keepbcc on
auth on
user user@inbox.ru
from user@inbox.ru
password 12312321
auth on
syslog on
tls on
tls_starttls on
tls_certcheck off
